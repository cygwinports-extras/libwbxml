inherit cmake

DESCRIPTION="Wireless Binary XML library and converters"
HOMEPAGE="http://libwbxml.opensync.org/"
SRC_URI="mirror://sourceforge/libwbxml/${P}.tar.bz2"
PATCH_URI="0.10.1-lib-install.patch
           0.10.1-pkgconfig-deps.patch"

PKG_NAMES="${PN} libwbxml2_0 libwbxml2-devel"
libwbxml_CONTENTS="usr/bin/*.exe usr/share/doc/"
libwbxml2_0_CONTENTS="usr/bin/cygwbxml2-0.dll"
libwbxml2_devel_CONTENTS="usr/include/ usr/lib/"

CYGCMAKE_ARGS="-DENABLE_INSTALL_DOC=NO"
DOCS="GNU-LGPL"
